{
    "name": "ixocreate/template",
    "description": "Plates integration for IXOCREATE",
    "license": "MIT",
    "type": "library",
    "authors": [{
        "name": "IXOCREATE",
        "email": "opensource@ixocreate.com"
    }],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "ixocreate/contract": "dev-develop",
        "zendframework/zend-expressive-platesrenderer": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0.6",
        "friendsofphp/php-cs-fixer": "^2.5",
        "php-coveralls/php-coveralls": "^2.0",
        "kiwi-suite/servicemanager": "dev-develop",
        "kiwi-suite/application": "dev-develop"
    },
    "autoload": {
        "psr-4": {
            "KiwiSuite\\Template\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KiwiSuiteMisc\\Template\\": "tests/misc/",
            "KiwiSuiteTest\\Template\\": "tests/src/"
        }
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix"
    }
}
