{
    "name": "ixocreate/template",
    "description": "Plates integration for IXOCREATE",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "IXOCREATE"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "ixocreate/contract": "dev-develop",
        "zendframework/zend-expressive-platesrenderer": "^2.0"
    },
    "require-dev": {
        "ixocreate/coding-standard": "^1.0.0",
        "phpunit/phpunit": "^6.0.6",
        "php-coveralls/php-coveralls": "^2.0",
        "ixocreate/servicemanager": "dev-develop"
    },
    "autoload": {
        "psr-4": {
            "Ixocreate\\Template\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IxocreateMisc\\Template\\": "tests/misc/",
            "IxocreateTest\\Template\\": "tests/src/"
        }
    },
    "scripts": {
        "fix-cs": "vendor/friendsofphp/php-cs-fixer/php-cs-fixer fix --config vendor/ixocreate/coding-standard/.php_cs"
    }
}
